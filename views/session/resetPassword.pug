head 
link(rel='stylesheet', href='../../stylesheets/style--login.css')
link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css')

.wrapper
  .container
    .form
      .main-div 
        .panel 
        if info && info.message
          div.alert.alert-danger
          = info.message
        h2 Cambio de Password
        p Por favor, ingrese su clave   
      form#Login(action='/resetPassword' method='post')
          input#email(type="hidden" name='email' value=  usuario.email) 
          .form-group
              label(for="pwd") Password: 
              input#pwd.form-control(type='password' name='password' class= errors.password ? 'is-invalid': '')
              if errors.password
                  small#passwordHelp.text-danger
                  = errors.password.message
          .form-group
              label(for='confirm_pwd') Confirmar Password:
              input#confirm_pwd.form-control(type='password' name='confirm_password' class= errors.confirm_password ? 'is-invalid': '')
              if errors.confirm_password
                  small#confirm_passwordHelp.text-danger
                  = errors.confirm_password.message

          button.login-btn(type='submit') Login 